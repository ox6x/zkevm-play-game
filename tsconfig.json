{
  "compilerOptions": {
    "target": "esnext",                   // 使用最新的 JavaScript 版本
    "lib": ["dom", "dom.iterable", "esnext"], // 支持 DOM 和 ESNext 标准
    "allowJs": true,                      // 允许 JavaScript 文件
    "skipLibCheck": true,                 // 跳过类型库检查，减少编译时间
    "strict": true,                       // 启用严格类型检查
    "forceConsistentCasingInFileNames": true, // 强制文件名一致
    "noEmit": true,                       // 不输出编译后的文件
    "esModuleInterop": true,              // 允许与 CommonJS 模块互操作
    "moduleResolution": "node",          // Node.js 模块解析
    "resolveJsonModule": true,           // 允许引入 JSON 文件
    "isolatedModules": true,             // 每个文件独立编译
    "jsx": "preserve",                   // 保留 JSX 格式
    "incremental": true                  // 启用增量编译
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"], // 包含的文件
  "exclude": ["node_modules"]                        // 排除的文件夹
}
